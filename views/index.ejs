
<style>
    .blog {
        padding: 10px;
    }
</style>

<div>
    <% blogs.forEach((blog)=>{ %>
        <div class="card text-center blog">

            <div class="card-header">
                <h1>
                    <%= blog.dataValues.title %>
                </h1>
            </div>
            <div class="card-body">

                <h4 class="card-text">
                    <%= blog.dataValues.description %>
                </h4>
                <span>
                    <a  href="/user/<%- blog.dataValues.title %>/<%- blog.dataValues.id %>" class="operation_btn btn btn-primary">Read More</a>
                    <a  href="/admin/update/blog/<%- blog.dataValues.id %>" class="operation_btn btn btn-primary">Update</a>
                    <a  href="/admin/delete/blog/<%- blog.dataValues.id %>" class="operation_btn btn btn-primary">Delete</a>
                </span>
            </div>
            <div class="card-footer text-muted">
                <i>
                    <%= blog.dataValues.createdAt %>
                  
                </i>
            </div>

        </div>
        <% }) %>
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination">
      <li class="page-item"><a class="page-link" href="/user/index?offset=0&&limit=5">Previous</a></li>
      <li class="page-item"><a class="page-link" href="/user/index?offset=5&&limit=5">1</a></li>
      <li class="page-item"><a class="page-link" href="/user/index?offset=10&&limit=5">2</a></li>
      <li class="page-item"><a class="page-link" href="/user/index?offset=15&&limit=5">3</a></li>
      <li class="page-item"><a class="page-link" href="/user/index?offset=20&&limit=5">Next</a></li>
    </ul>
</nav>



<script>
    
    const user_cookie = document.cookie.split('; ')
    console.log('kcr', user_cookie)
    
    let user_id = user_cookie[0];
    let email_id = user_cookie[1];
    
   

    if(/*after logout*/ user_id == "user_id=0" || !user_id /*starting*/){
        let elements = document.getElementsByClassName('operation_btn');
        for(let i = 0; i < elements.length; i++){
            elements[i].style.display = "none";
        }
        
    } else if(email_id != "email_id=admin%40example.com" /*not admin*/){
        let elements = document.getElementsByClassName('operation_btn');
        for(let i = 1; i < elements.length; i++){
            elements[i].style.display = "none";
        }
       
        //elements[2].style.display = "none"; 
    }
</script>